{
  "name": "unjucks",
  "version": "1.0.0",
  "type": "module",
  "description": "Nunjucks + Hygen style scaffolding with RDF/Turtle support",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "unjucks": "./bin/unjucks.cjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/src",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && npm run build:post",
    "build:post": "mv dist/index.js dist/index.cjs && chmod +x bin/unjucks.cjs",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cucumber": "vitest run --config vitest.cucumber.config.ts",
    "test:bdd": "npm run test:cucumber",
    "test:integration": "vitest run tests/integration/",
    "test:validation": "vitest run tests/validation/",
    "test:security": "vitest run tests/security/",
    "test:performance": "vitest run tests/benchmarks/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "version:patch": "npm version patch && git push --tags",
    "version:minor": "npm version minor && git push --tags",
    "version:major": "npm version major && git push --tags",
    "release": "npm run prepublishOnly && npm publish"
  },
  "keywords": [
    "template",
    "generator",
    "nunjucks",
    "hygen",
    "scaffolding",
    "rdf",
    "turtle",
    "semantic-web",
    "n3"
  ],
  "author": "Unjucks Team",
  "license": "MIT",
  "preferGlobal": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unjucks/unjucks"
  },
  "homepage": "https://unjucks.dev",
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^4.0.3",
    "citty": "^0.1.6",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "n3": "^1.26.0",
    "nunjucks": "^3.2.4",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@amiceli/vitest-cucumber": "^5.2.1",
    "@types/node": "^20.0.0",
    "@types/nunjucks": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/ui": "^3.2.4",
    "eslint-plugin-import": "^2.32.0",
    "typescript": "^5.4.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "chokidar": "^3.3.0"
  }
}