{
  "name": "unjucks",
  "version": "0.0.0",
  "description": "A Hygen-style CLI generator for creating templates and scaffolding projects",
  "repository": "unjs/unjucks",
  "bin": {
    "unjucks": "./dist/cli.mjs",
    "unjucks-mcp": "./dist/mcp-server.mjs"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./dist/cli.mjs",
    "./mcp": "./dist/mcp/index.mjs"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "obuild",
    "dev": "vitest dev",
    "lint": "eslint . && prettier -c .",
    "lint:fix": "automd && eslint . --fix && prettier -w .",
    "prepack": "pnpm build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && pnpm test:types && vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck",
    "test:bdd": "vitest run --config config/vitest.cucumber.config.ts",
    "test:bdd:watch": "vitest watch --config config/vitest.cucumber.config.ts",
    "test:unit": "vitest run --exclude tests/features/",
    "test:all": "vitest run",
    "test:smoke": "vitest run tests/features/cli/basic-cli.feature.spec.ts",
    "test:bdd:ui": "vitest --config config/vitest.cucumber.config.ts --ui",
    "test:regression": "vitest run --config config/vitest.cucumber.config.ts --reporter=verbose",
    "test:integration": "vitest run --config config/vitest.cucumber.config.ts --reporter=json --outputFile=reports/integration-results.json",
    "test:dev": "vitest watch --config config/vitest.cucumber.config.ts --reporter=verbose",
    "test:ci": "vitest run --config config/vitest.cucumber.config.ts --coverage --reporter=json --outputFile=reports/ci-results.json",
    "test:performance": "vitest run --config config/vitest.performance.config.ts",
    "test:perf:benchmark": "vitest run --config config/vitest.performance.config.ts --reporter=verbose",
    "cleanup": "tsx scripts/cleanup.ts",
    "cleanup:dry": "tsx scripts/cleanup.ts --dry-run --verbose",
    "cleanup:cache": "find . -name '.unjucks-cache' -type d -exec rm -rf {} + 2>/dev/null || true",
    "cleanup:test": "rm -rf test-* debug-cli.js 2>/dev/null || true",
    "test:perf:ci": "vitest run --config config/vitest.performance.config.ts --reporter=json --outputFile=reports/perf-ci-results.json",
    "test:perf:startup": "vitest run tests/performance/cli-startup.performance.test.ts --config config/vitest.performance.config.ts",
    "test:perf:generation": "vitest run tests/performance/template-generation.performance.test.ts --config config/vitest.performance.config.ts",
    "test:perf:load": "vitest run tests/performance/load-testing.performance.test.ts --config config/vitest.performance.config.ts",
    "test:perf:edge": "vitest run tests/performance/edge-cases.performance.test.ts --config config/vitest.performance.config.ts",
    "test:perf:validation": "vitest run tests/performance/ci-validation.performance.test.ts --config config/vitest.performance.config.ts",
    "test:perf:regression": "vitest run tests/performance/regression-tracking.performance.test.ts --config config/vitest.performance.config.ts",
    "benchmark": "tsx scripts/performance-benchmark.ts",
    "benchmark:ci": "tsx scripts/ci-performance-check.ts",
    "test:security": "vitest run --config config/vitest.cucumber.config.ts --testNamePattern=\".*security.*\"",
    "test:cucumber:dry": "vitest run --config config/vitest.cucumber.config.ts --reporter=verbose --bail=1",
    "test:cucumber:parallel": "vitest run --config config/vitest.cucumber.config.ts --pool=threads --poolOptions.threads.maxThreads=4",
    "test:cucumber:debug": "DEBUG=true vitest run --config config/vitest.cucumber.config.ts --reporter=verbose",
    "test:cucumber:legacy": "echo 'Legacy cucumber removed. Use npm run test:bdd instead'",
    "test:cucumber:watch": "echo 'Legacy cucumber removed. Use npm run test:bdd:watch instead'",
    "reports": "tsx scripts/generate-reports.ts",
    "reports:security": "tsx scripts/generate-reports.ts --security-only",
    "reports:performance": "tsx scripts/generate-reports.ts --performance-only",
    "reports:coverage": "tsx scripts/generate-reports.ts --coverage-only",
    "reports:cleanup": "tsx scripts/generate-reports.ts --cleanup",
    "reports:ci": "tsx scripts/generate-reports.ts --format json --cleanup"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "citty": "^0.1.6",
    "confbox": "^0.2.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.15",
    "nunjucks": "^3.2.4",
    "ora": "^8.0.1",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@amiceli/vitest-cucumber": "^5.2.1",
    "@cucumber/cucumber": "^12.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.3.0",
    "@types/nunjucks": "^3.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "automd": "^0.4.0",
    "changelogen": "^0.6.2",
    "chokidar": "^4.0.3",
    "eslint": "^9.33.0",
    "eslint-config-unjs": "^0.5.0",
    "fast-check": "^3.23.2",
    "glob": "^10.0.0",
    "hygen": "^6.2.11",
    "jest": "^29.7.0",
    "obuild": "^0.2.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.15.0"
}
