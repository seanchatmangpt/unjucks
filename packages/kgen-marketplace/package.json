{
  "name": "@kgen/marketplace",
  "version": "1.0.0",
  "description": "KGEN Marketplace - Knowledge Pack distribution and commerce platform",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.mjs",
      "types": "./dist/types/index.d.ts"
    },
    "./registry": {
      "import": "./dist/registry/index.mjs",
      "types": "./dist/registry/index.d.ts"
    },
    "./payments": {
      "import": "./dist/payments/index.mjs",
      "types": "./dist/payments/index.d.ts"
    },
    "./trust": {
      "import": "./dist/trust/index.mjs",
      "types": "./dist/trust/index.d.ts"
    }
  },
  "scripts": {
    "build": "unbuild",
    "build:watch": "unbuild --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .js,.mjs",
    "lint:fix": "eslint src --ext .js,.mjs --fix",
    "typecheck": "echo 'TypeScript removed - using unbuild for type checking and generation'",
    "clean": "rm -rf dist",
    "dev": "unbuild --watch && node --watch dist/index.mjs",
    "format": "prettier --write \"src/**/*.{js,mjs,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,mjs,json,md}\"",
    "prepublishOnly": "npm run clean && npm run build",
    "docs": "echo 'Documentation generation updated for JS modules'",
    "validate": "npm run build && npm run lint && npm run test"
  },
  "dependencies": {
    "@noble/curves": "^2.0.0",
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.0",
    "@noble/secp256k1": "^3.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "form-data": "^4.0.4",
    "fs-extra": "^11.3.1",
    "jose": "^6.1.0",
    "lru-cache": "^11.2.1",
    "multiformats": "^13.4.0",
    "node-forge": "^1.3.1",
    "simple-git": "^3.20.0",
    "tar-stream": "^3.1.7",
    "undici": "^7.16.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.56.0",
    "unbuild": "^2.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "kgen",
    "marketplace",
    "knowledge-pack",
    "rdf",
    "semantic-web",
    "content-addressing",
    "cryptographic-attestation",
    "package-manager",
    "ontology",
    "trust-scoring"
  ],
  "author": "KGEN System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/kgen.git",
    "directory": "packages/kgen-marketplace"
  },
  "bugs": {
    "url": "https://github.com/your-org/kgen/issues"
  },
  "homepage": "https://kgen.ai/marketplace",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
