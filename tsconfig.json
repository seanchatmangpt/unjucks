{
  "extends": "./tsconfig.migration-phase1.json",
  "compilerOptions": {
    // Phase 1 Migration: Zero errors configuration
    // See docs/typescript-migration-strategy.md for full details
  },
  "exclude": [
    "node_modules", 
    "dist",
    "test-*/**",
    "**/{{ * }}*",
    "**/<%= * %>*",
    "tests/fixtures/**/*.js",
    "_templates/**",
    "src/components/**/*.tsx", 
    "src/components/**/*.ts",
    "src/composables/**/*.ts",
    "src/large/**",
    "**/argument-parser.ts",
    "**/*real-validation-simple*",
    "tests/integration/fortune5-scenarios/**/*",
    "tests/security/attack-simulation.test.ts",
    "tests/step-definitions/**/*",
    "tests/integration/rdf-template-generation.test.ts",
    "tests/integration/rdf-critical-paths.test.ts",
    "examples/**/*",
    "tests/validation/**/*",
    "generated/**/*",
    "scripts/**/*",
    "nuxt.config.ts",
    "tests/unit/validation-pipeline.test.ts"
  ]
}