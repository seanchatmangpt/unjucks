{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules", 
    "dist",
    "test-*/**",
    "**/{{ * }}*",
    "**/<%= * %>*",
    "tests/fixtures/**/*.js",
    "_templates/**",
    "src/components/**/*.tsx", 
    "src/components/**/*.ts",
    "src/large/**",
    "**/argument-parser.ts",
    "**/*real-validation-simple*",
    "tests/integration/fortune5-scenarios/**/*",
    "tests/security/attack-simulation.test.ts",
    "tests/step-definitions/**/*",
    "tests/integration/rdf-template-generation.test.ts",
    "tests/integration/rdf-critical-paths.test.ts"
  ]
}
