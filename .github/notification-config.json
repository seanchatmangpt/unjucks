{
  "channels": {
    "github_issue": {
      "enabled": true,
      "priority_threshold": "low"
    },
    "github_discussion": {
      "enabled": true,
      "priority_threshold": "medium"
    },
    "action_summary": {
      "enabled": true,
      "priority_threshold": "low"
    },
