{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KGEN Trust Policy Schema",
  "description": "Schema for validating KGEN attestation trust policies",
  "type": "object",
  "required": [
    "version",
    "trustedSigners",
    "requiredSignatures",
    "allowedPredicateTypes",
    "slsaLevel"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the trust policy format"
    },
    "trustedSigners": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["keyid", "publicKey", "name"],
        "properties": {
          "keyid": {
            "type": "string",
            "minLength": 1,
            "description": "Unique identifier for the signing key (e.g., DID or fingerprint)"
          },
          "publicKey": {
            "type": "string",
            "pattern": "^-----BEGIN PUBLIC KEY-----[\\s\\S]*-----END PUBLIC KEY-----$",
            "description": "Ed25519 public key in PEM format"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Human-readable name for the signer"
          },
          "expires": {
            "type": "string",
            "format": "date-time",
            "description": "Optional expiration date for the key"
          },
          "organization": {
            "type": "string",
            "description": "Organization the signer belongs to"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["developer", "admin", "ci-system", "release-manager"]
            },
            "description": "Roles assigned to this signer"
          }
        },
        "additionalProperties": false
      },
      "description": "List of trusted signers and their public keys"
    },
    "requiredSignatures": {
      "type": "integer",
      "minimum": 0,
      "description": "Minimum number of valid signatures required for verification"
    },
    "allowedPredicateTypes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "format": "uri",
        "description": "URI identifying the predicate type"
      },
      "description": "List of allowed predicate types in attestations"
    },
    "slsaLevel": {
      "type": "integer",
      "enum": [1, 2, 3, 4],
      "description": "Required SLSA (Supply-chain Levels for Software Artifacts) level"
    },
    "additionalChecks": {
      "type": "object",
      "properties": {
        "requireGitSigning": {
          "type": "boolean",
          "default": false,
          "description": "Require git commits to be signed"
        },
        "requireReproducibleBuilds": {
          "type": "boolean",
          "default": false,
          "description": "Require builds to be marked as reproducible"
        },
        "allowedEnvironments": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["development", "staging", "production", "ci"]
          },
          "description": "List of allowed build environments"
        },
        "maxAttestationAge": {
          "type": "string",
          "pattern": "^\\d+[dhm]$",
          "description": "Maximum age of attestations (e.g., '30d', '7h', '60m')"
        },
        "requiredMaterials": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of required materials (e.g., source files, dependencies)"
        },
        "forbiddenMaterials": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of forbidden materials that should not appear in attestations"
        },
        "allowedCommands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of allowed build commands"
        },
        "requiredEnvironmentVariables": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Environment variables that must be present in attestations"
        }
      },
      "additionalProperties": false,
      "description": "Additional verification checks beyond basic SLSA requirements"
    },
    "exemptions": {
      "type": "object",
      "properties": {
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["pattern", "reason"],
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Glob pattern matching exempt artifacts"
              },
              "reason": {
                "type": "string",
                "description": "Reason for exemption"
              },
              "expires": {
                "type": "string",
                "format": "date-time",
                "description": "Expiration date for the exemption"
              }
            }
          },
          "description": "Artifacts exempt from trust policy enforcement"
        },
        "environments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "reason"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Environment name"
              },
              "reason": {
                "type": "string",
                "description": "Reason for exemption"
              },
              "reducedChecks": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "signatures",
                    "slsaLevel",
                    "reproducible",
                    "materials",
                    "age"
                  ]
                },
                "description": "List of checks to skip for this environment"
              }
            }
          },
          "description": "Environments with reduced trust policy requirements"
        }
      },
      "additionalProperties": false,
      "description": "Exemptions from trust policy enforcement"
    },
    "notifications": {
      "type": "object",
      "properties": {
        "webhook": {
          "type": "string",
          "format": "uri",
          "description": "Webhook URL for verification notifications"
        },
        "email": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "email"
          },
          "description": "Email addresses for verification alerts"
        },
        "onFailure": {
          "type": "boolean",
          "default": true,
          "description": "Send notifications on verification failures"
        },
        "onSuccess": {
          "type": "boolean",
          "default": false,
          "description": "Send notifications on successful verifications"
        }
      },
      "additionalProperties": false,
      "description": "Notification settings for verification events"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable name for this trust policy"
        },
        "description": {
          "type": "string",
          "description": "Description of this trust policy"
        },
        "owner": {
          "type": "string",
          "description": "Owner or maintainer of this trust policy"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification timestamp"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags for categorizing this policy"
        }
      },
      "additionalProperties": false,
      "description": "Metadata about this trust policy"
    }
  },
  "additionalProperties": false
}