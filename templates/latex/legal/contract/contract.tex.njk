% Legal document formatting
\doublespacing
\setlength{\parindent}{0.5in}
\setlength{\parskip}{6pt}

% Header and footer setup
\pagestyle{fancy}
\fancyhf{}
\fancyhead[L]{{ contractName | title }}
\fancyhead[R]{\thepage}
\renewcommand{\headrulewidth}{0pt}

% Section formatting for legal documents
\titleformat{\section}[block]{\normalfont\large\bfseries\centering}{\thesection.}{1em}{}
\titleformat{\subsection}[block]{\normalfont\normalsize\bfseries}{\thesubsection}{1em}{}
\titleformat{\subsubsection}[runin]{\normalfont\normalsize\bfseries}{\thesubsubsection}{1em}{}[.]

% Custom commands for legal formatting
\newcommand{\party}[1]{\textbf{#1}}
\newcommand{\define}[1]{\textbf{``#1''}}
\newcommand{\legalref}[1]{\textsc{#1}}
\newcommand{\contractdate}[1]{\underline{\hspace{2in}} day of \underline{\hspace{2in}}, 20\underline{\hspace{1in}}}
\newcommand{\legaltoday}{{{ legalDateNow(jurisdiction, 'contract') }}}
\newcommand{\auditdate}{{{ auditTimestamp() }}}

% Jurisdiction-specific formatting
{% if jurisdiction == 'federal' %}
\newcommand{\courtformat}[1]{\textsc{#1}}
{% elif jurisdiction == 'california' %}
\newcommand{\courtformat}[1]{\textbf{#1}}
{% else %}
\newcommand{\courtformat}[1]{#1}
{% endif %}

% Bluebook citation support
\newcommand{\cite}[2]{\textit{#1}, #2}
\newcommand{\statute}[2]{#1 \S\ #2}
\newcommand{\case}[3]{\textit{#1} #2 (#3)}

\begin{document}

% Title page
\begin{center}
{\Large\textbf{{ contractName | title }}}\\[0.5in]
{\large {{ contractType | title }} Agreement}\\[0.25in]
