---
to: "{{ briefTitle | lower | replace(' ', '-') }}-brief.tex"
inject: false
skipIf: exists
variables:
  - briefTitle: string
  - briefType: string
  - courtName: string
  - caseNumber: string
  - plaintiff: string
  - defendant: string
  - attorney: object
  - jurisdiction: string
  - briefingSchedule: object
  - pageLimit: number
  - includeTableOfContents: boolean
  - includeTableOfAuthorities: boolean
---
