to: src/{{ serviceName | kebabCase }}-service/server.js
---
const express = require('express');
const cors = require('cors');
const helmet = require('helmet');
{% if withRateLimit %}const rateLimit = require('express-rate-limit');{% endif %}
{% if monitoring === 'prometheus' %}const prometheus = require('prom-client');{% endif %}
const { createServer } = require('http');
{% if withAuth %}const { authMiddleware } = require('./middleware/auth');{% endif %}
{% if withRBAC %}const { rbacMiddleware } = require('./middleware/rbac');{% endif %}
{% if withAuditLog %}const { auditMiddleware } = require('./middleware/audit');{% endif %}
const { errorHandler, notFound } = require('./middleware/error-handler');
const { healthRoutes } = require('./routes/health');
const { metricsRoutes } = require('./routes/metrics');
const { {{ serviceName | camelCase }}Routes } = require('./routes/{{ serviceName | kebabCase }}');
const database = require('./database');
const logger = require('./utils/logger');
const config = require('./config');

class {{ serviceName }}Server {
  constructor() {
    this.app = express();
    this.server = null;
    this.setupMiddleware();
    this.setupRoutes();
    this.setupErrorHandling();
  }

  setupMiddleware() {
    // Security middleware
    this.app.use(helmet({
      contentSecurityPolicy: {
        directives: {
          defaultSrc: ["'self'"],
          styleSrc: ["'self'", "'unsafe-inline'"],
          scriptSrc: ["'self'"],
          imgSrc: ["'self'", "data:", "https:"]
        }
      },
      hsts: {
        maxAge: 31536000,
        includeSubDomains: true,
        preload: true
      }
    }));

    // CORS configuration
    this.app.use(cors({
      origin: config.cors.allowedOrigins,
      credentials: true,
      methods: ['GET', 'POST', 'PUT', 'DELETE', 'PATCH', 'OPTIONS'],
      allowedHeaders: ['Content-Type', 'Authorization', 'X-Requested-With']
    }));

    // Body parsing
    this.app.use(express.json({ limit: '10mb' }));
    this.app.use(express.urlencoded({ extended: true, limit: '10mb' }));

    {% if withRateLimit %}
    // Rate limiting
    const limiter = rateLimit({
      windowMs: 15 * 60 * 1000, // 15 minutes
      max: config.rateLimit.maxRequests || 100,
      message: {
        error: 'Too many requests',
        retryAfter: '15 minutes'
      },
      standardHeaders: true,
      legacyHeaders: false,
    });
    this.app.use('/api/', limiter);
    {% endif %}

    {% if withAuditLog %}
    // Audit logging for compliance
    this.app.use(auditMiddleware);
    {% endif %}

    // Request logging
    this.app.use((req, res, next) => {
      logger.info(`${req.method} ${req.path}`, {
        ip: req.ip,
        userAgent: req.get('User-Agent'),
        timestamp: new Date().toISOString()
      });
      next();
    });

    {% if monitoring === 'prometheus' %}
    // Prometheus metrics collection
    this.app.use((req, res, next) => {
      const start = Date.now();
      res.on('finish', () => {
        const duration = Date.now() - start;
        prometheus.register.getSingleMetric('http_request_duration_ms')?.observe(
          { method: req.method, route: req.route?.path || req.path, status: res.statusCode },
          duration
        );
      });
      next();
    });
    {% endif %}
  }

  setupRoutes() {
    // Health check endpoints
    this.app.use('/health', healthRoutes);
    
    // Metrics endpoint
    this.app.use('/metrics', metricsRoutes);

    // API routes with versioning
    const apiRouter = express.Router();
    
    {% if withAuth %}
    // Apply authentication to all API routes
    apiRouter.use(authMiddleware);
    {% endif %}

    {% if withRBAC %}
    // Apply RBAC to protected routes
    apiRouter.use('/{{ serviceName | kebabCase }}', rbacMiddleware);
    {% endif %}

    // Main service routes
    apiRouter.use('/{{ serviceName | kebabCase }}', {{ serviceName | camelCase }}Routes);

    this.app.use('/api/{{ apiVersion }}', apiRouter);

    // API documentation
    this.app.get('/api/docs', (req, res) => {
      res.json({
        service: '{{ serviceName }}',
        version: '{{ apiVersion }}',
        description: '{{ serviceName }} microservice API',
        endpoints: {
          'GET /health': 'Health check endpoint',
          'GET /metrics': 'Prometheus metrics endpoint',
          'GET /api/{{ apiVersion }}/{{ serviceName | kebabCase }}': 'Main service endpoints'
        },
        {% if compliance %}
        compliance: {{ compliance | dump }},
        {% endif %}
        documentation: `/api/{{ apiVersion }}/{{ serviceName | kebabCase }}/docs`
      });
    });
  }

  setupErrorHandling() {
    // 404 handler
    this.app.use(notFound);
    
    // Global error handler
    this.app.use(errorHandler);
  }

  async start() {
    try {
      // Initialize database connection
      await database.connect();
      logger.info('Database connected successfully');

      {% if monitoring === 'prometheus' %}
      // Initialize Prometheus metrics
      prometheus.collectDefaultMetrics();
      {% endif %}

      // Start HTTP server
      this.server = createServer(this.app);
      
      this.server.listen(config.port, () => {
        logger.info(`{{ serviceName }} service started`, {
          port: config.port,
          environment: config.environment,
          version: config.version,
          {% if compliance %}compliance: {{ compliance | dump }},{% endif %}
          database: '{{ database }}',
          monitoring: '{{ monitoring }}'
        });
      });

      // Graceful shutdown
      process.on('SIGTERM', () => this.shutdown());
      process.on('SIGINT', () => this.shutdown());

    } catch (error) {
      logger.error('Failed to start server', error);
      process.exit(1);
    }
  }

  async shutdown() {
    logger.info('Shutting down {{ serviceName }} service...');
    
    if (this.server) {
      this.server.close(async () => {
        logger.info('HTTP server closed');
        await database.disconnect();
        logger.info('Database connection closed');
        process.exit(0);
      });
    }
  }
}

module.exports = { {{ serviceName }}Server };

// Start server if this file is run directly
if (require.main === module) {
  const server = new {{ serviceName }}Server();
  server.start();
}