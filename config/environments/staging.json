{
  "app": {
    "name": "unjucks-enterprise",
    "version": "1.0.0",
    "description": "Unjucks Enterprise Application",
    "environment": "staging"
  },
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "timeout": 30000,
    "keepAliveTimeout": 65000,
    "maxConnections": 5000
  },
  "security": {
    "cors": {
      "origin": [
        "https://staging.unjucks.dev",
        "http://localhost:3000"
      ],
      "credentials": true,
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"]
    },
    "rateLimit": {
      "enabled": true,
      "windowMs": 1800000,
      "maxRequests": 2000,
      "skipSuccessfulRequests": false,
      "skipFailedRequests": false
    },
    "headers": {
      "hsts": true,
      "noSniff": true,
      "xframe": true,
      "xss": true
    }
  },
  "database": {
    "type": "postgresql",
    "ssl": true,
    "pool": {
      "min": 3,
      "max": 20,
      "acquireTimeoutMillis": 60000,
      "idleTimeoutMillis": 30000
    },
    "retries": {
      "max": 3,
      "backoffBase": 300,
      "backoffExponent": 2
    }
  },
  "cache": {
    "type": "redis",
    "ttl": 3600,
    "maxSize": 50000
  },
  "logging": {
    "level": "debug",
    "format": "json",
    "enableAudit": true,
    "enablePerformance": false,
    "retention": {
      "days": 30,
      "maxSize": "500MB"
    }
  },
  "monitoring": {
    "enabled": true,
    "metrics": {
      "enabled": true,
      "endpoint": "/metrics",
      "interval": 30000
    },
    "health": {
      "enabled": true,
      "endpoint": "/health",
      "detailed": true
    },
    "tracing": {
      "enabled": false,
      "sampleRate": 0.1
    }
  }
}