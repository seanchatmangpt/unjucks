---
name: "Business Presentation Template"
type: "powerpoint"
category: "business"
description: "Professional business presentation template"
requiredData: ["title", "slides", "branding"]
---
{# This template will be processed by the PowerPoint processor using a JSON structure #}
{
  "presentation": {
    "properties": {
      "title": "{{ title }}",
      "subject": "{{ subject | default('Business Presentation') }}",
      "author": "{{ author | default('Business Team') }}",
      "created": "{{ generatedAt | default('now') }}"
    },
    "theme": {
      "name": "{{ branding.theme | default('corporate') }}",
      "primaryColor": "{{ branding.primaryColor | default('366092') }}",
      "secondaryColor": "{{ branding.secondaryColor | default('4A90E2') }}",
      "accentColor": "{{ branding.accentColor | default('F39C12') }}",
      "fontFamily": "{{ branding.fontFamily | default('Calibri') }}"
    },
    "masterSlides": [
      {
        "name": "title",
        "layout": {
          "background": {"color": "{{ branding.primaryColor | default('366092') }}"},
          "elements": [
            {
              "type": "text",
              "content": "{{ branding.companyName | default('Company Name') }}",
              "position": {"x": 50, "y": 50, "width": 500, "height": 50},
              "style": {"fontSize": 24, "color": "FFFFFF", "bold": true}
            }
          ]
        }
      },
      {
        "name": "content",
        "layout": {
          "background": {"color": "FFFFFF"},
          "elements": [
            {
              "type": "text",
              "content": "{{ branding.companyName | default('Company Name') }}",
              "position": {"x": 600, "y": 20, "width": 300, "height": 30},
              "style": {"fontSize": 12, "color": "{{ branding.primaryColor | default('366092') }}"}
            }
          ]
        }
      }
    ],
    "slides": [
      {
        "layout": "title",
        "title": "{{ title }}",
        "subtitle": "{{ subtitle | default('') }}",
        "elements": [
          {
            "type": "text",
            "content": "{{ title }}",
            "position": {"x": 100, "y": 200, "width": 800, "height": 100},
            "style": {
              "fontSize": 44,
              "color": "FFFFFF",
              "bold": true,
              "alignment": "center"
            }
          }
          {% if subtitle %}
          ,{
            "type": "text",
            "content": "{{ subtitle }}",
            "position": {"x": 100, "y": 320, "width": 800, "height": 60},
            "style": {
              "fontSize": 24,
              "color": "FFFFFF",
              "alignment": "center"
            }
          }
          {% endif %}
          {% if presenter %}
          ,{
            "type": "text",
            "content": "{{ presenter.name }}\n{{ presenter.title }}\n{{ presenter.date | default(generatedAt) }}",
            "position": {"x": 100, "y": 450, "width": 800, "height": 120},
            "style": {
              "fontSize": 18,
              "color": "FFFFFF",
              "alignment": "center"
            }
          }
          {% endif %}
        ]
      }
      {% if agenda %}
      ,{
        "layout": "content",
        "title": "Agenda",
        "elements": [
          {
            "type": "text",
            "content": "Agenda",
            "position": {"x": 50, "y": 60, "width": 800, "height": 50},
            "style": {
              "fontSize": 36,
              "color": "{{ branding.primaryColor | default('366092') }}",
              "bold": true
            }
          },
          {
            "type": "list",
            "items": [
              {% for item in agenda %}
              "{{ item }}"{% if not loop.last %},{% endif %}
              {% endfor %}
            ],
            "position": {"x": 80, "y": 140, "width": 800, "height": 400},
            "style": {
              "fontSize": 24,
              "color": "333333",
              "bulletStyle": "bullet"
            }
          }
        ]
      }
      {% endif %}
      {% for slide in slides %}
      ,{
        "layout": "{{ slide.layout | default('content') }}",
        "title": "{{ slide.title }}",
        {% if slide.subtitle %}
        "subtitle": "{{ slide.subtitle }}",
        {% endif %}
        "elements": [
          {
            "type": "text",
            "content": "{{ slide.title }}",
            "position": {"x": 50, "y": 60, "width": 800, "height": 50},
            "style": {
              "fontSize": 36,
              "color": "{{ branding.primaryColor | default('366092') }}",
              "bold": true
            }
          }
          {% if slide.subtitle %}
          ,{
            "type": "text",
            "content": "{{ slide.subtitle }}",
            "position": {"x": 50, "y": 120, "width": 800, "height": 30},
            "style": {
              "fontSize": 20,
              "color": "666666"
            }
          }
          {% endif %}
          {% if slide.content %}
          ,{
            "type": "text",
            "content": "{{ slide.content }}",
            "position": {"x": 80, "y": {% if slide.subtitle %}170{% else %}140{% endif %}, "width": 800, "height": 300},
            "style": {
              "fontSize": 20,
              "color": "333333",
              "lineSpacing": 1.2
            }
          }
          {% endif %}
          {% if slide.bulletPoints %}
          ,{
            "type": "list",
            "items": [
              {% for point in slide.bulletPoints %}
              "{{ point }}"{% if not loop.last %},{% endif %}
              {% endfor %}
            ],
            "position": {"x": 80, "y": {% if slide.subtitle %}170{% else %}140{% endif %}, "width": 800, "height": 350},
            "style": {
              "fontSize": 20,
              "color": "333333",
              "bulletStyle": "bullet",
              "lineSpacing": 1.3
            }
          }
          {% endif %}
          {% if slide.image %}
          ,{
            "type": "image",
            "source": "{{ slide.image.path }}",
            "position": {
              "x": {{ slide.image.x | default(500) }},
              "y": {{ slide.image.y | default(200) }},
              "width": {{ slide.image.width | default(400) }},
              "height": {{ slide.image.height | default(300) }}
            }
          }
          {% endif %}
          {% if slide.chart %}
          ,{
            "type": "chart",
            "chartType": "{{ slide.chart.type }}",
            "title": "{{ slide.chart.title }}",
            "data": {{ slide.chart.data | tojson }},
            "position": {
              "x": {{ slide.chart.x | default(100) }},
              "y": {{ slide.chart.y | default(200) }},
              "width": {{ slide.chart.width | default(800) }},
              "height": {{ slide.chart.height | default(300) }}
            },
            "style": {
              "primaryColor": "{{ branding.primaryColor | default('366092') }}",
              "secondaryColor": "{{ branding.secondaryColor | default('4A90E2') }}"
            }
          }
          {% endif %}
          {% if slide.table %}
          ,{
            "type": "table",
            "headers": {{ slide.table.headers | tojson }},
            "data": {{ slide.table.data | tojson }},
            "position": {
              "x": {{ slide.table.x | default(80) }},
              "y": {{ slide.table.y | default(200) }},
              "width": {{ slide.table.width | default(840) }},
              "height": {{ slide.table.height | default(300) }}
            },
            "style": {
              "headerColor": "{{ branding.primaryColor | default('366092') }}",
              "alternateRowColor": "F8F9FA",
              "fontSize": 16
            }
          }
          {% endif %}
        ]
      }
      {% endfor %}
      {% if summary %}
      ,{
        "layout": "content",
        "title": "Summary",
        "elements": [
          {
            "type": "text",
            "content": "Summary",
            "position": {"x": 50, "y": 60, "width": 800, "height": 50},
            "style": {
              "fontSize": 36,
              "color": "{{ branding.primaryColor | default('366092') }}",
              "bold": true
            }
          },
          {
            "type": "list",
            "items": [
              {% for item in summary %}
              "{{ item }}"{% if not loop.last %},{% endif %}
              {% endfor %}
            ],
            "position": {"x": 80, "y": 140, "width": 800, "height": 350},
            "style": {
              "fontSize": 22,
              "color": "333333",
              "bulletStyle": "bullet",
              "lineSpacing": 1.4
            }
          }
        ]
      }
      {% endif %}
      {% if contactInfo %}
      ,{
        "layout": "content",
        "title": "Questions & Contact",
        "elements": [
          {
            "type": "text",
            "content": "Questions & Contact",
            "position": {"x": 50, "y": 60, "width": 800, "height": 50},
            "style": {
              "fontSize": 36,
              "color": "{{ branding.primaryColor | default('366092') }}",
              "bold": true
            }
          },
          {
            "type": "text",
            "content": "{{ contactInfo.name }}\n{{ contactInfo.title }}\n{{ contactInfo.email }}\n{{ contactInfo.phone | default('') }}",
            "position": {"x": 100, "y": 200, "width": 800, "height": 200},
            "style": {
              "fontSize": 24,
              "color": "333333",
              "alignment": "center",
              "lineSpacing": 1.3
            }
          }
        ]
      }
      {% endif %}
    ],
    "transitions": {
      "default": "{{ transitions.default | default('fade') }}",
      "duration": {{ transitions.duration | default(500) }}
    },
    "animations": {
      "titleEntrance": "{{ animations.titleEntrance | default('fadeIn') }}",
      "contentEntrance": "{{ animations.contentEntrance | default('fadeInUp') }}",
      "listItems": "{{ animations.listItems | default('fadeInLeft') }}"
    }
  }
}