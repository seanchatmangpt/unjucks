---
to: src/components/{{ componentName | pascalCase }}/{{ componentName | pascalCase }}.module.css
---
{% if withStyles %}
.{{ componentName | camelCase }} {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding: 1rem;
  border: 1px solid #e2e8f0;
  border-radius: 0.5rem;
  background-color: #ffffff;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
}

.{{ componentName | camelCase }} h2 {
  margin: 0;
  font-size: 1.5rem;
  font-weight: 600;
  color: #1a202c;
}

.{{ componentName | camelCase }} p {
  margin: 0;
  color: #4a5568;
}

.{{ componentName | camelCase }} .loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
  background-color: #f7fafc;
  border-radius: 0.25rem;
  color: #2d3748;
}

.{{ componentName | camelCase }} .error {
  padding: 0.75rem;
  background-color: #fed7d7;
  border: 1px solid #feb2b2;
  border-radius: 0.25rem;
  color: #c53030;
  font-weight: 500;
}

.{{ componentName | camelCase }}:hover {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  transform: translateY(-1px);
  transition: all 0.2s ease-in-out;
}

/* Responsive design */
@media (max-width: 768px) {
  .{{ componentName | camelCase }} {
    padding: 0.75rem;
    gap: 0.75rem;
  }
  
  .{{ componentName | camelCase }} h2 {
    font-size: 1.25rem;
  }
}
{% endif %}