---
to: "{{ outputDir }}/package.json"
inject: false
skipIf: "!generatePackageJson"
---
{
  "name": "{{ appName | kebabCase || 'openapi-nuxt-app' }}",
  "version": "1.0.0",
  "description": "{{ appDescription || 'Generated from OpenAPI specification' }}",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev{% if devServerPort %} --port {{ devServerPort }}{% endif %}",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    {% if generateTests %}
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    {% endif %}
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxt typecheck"
    {% if generateDockerfile %},
    "docker:build": "docker build -t {{ appName | kebabCase }} .",
    "docker:run": "docker run -p 3000:3000 {{ appName | kebabCase }}"
    {% endif %}
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^0.2.0",
    "eslint": "^8.57.0",
    "nuxt": "^3.8.0",
    "typescript": "^5.2.2"
    {% if generateTests %},
    "vitest": "^1.0.4",
    "@vue/test-utils": "^2.4.2",
    "happy-dom": "^12.10.3",
    "@playwright/test": "^1.40.1"
    {% if enableCoverage %},
    "@vitest/coverage-v8": "^1.0.4"
    {% endif %}
    {% endif %}
  },
  "dependencies": {
    {% if uiFramework === 'nuxt-ui' %}
    "@nuxt/ui": "^2.11.1",
    "@nuxtjs/tailwindcss": "^6.8.4",
    {% elif uiFramework === 'vuetify' %}
    "vuetify": "^3.4.4",
    "@mdi/font": "^7.2.96",
    {% elif uiFramework === 'quasar' %}
    "quasar": "^2.14.1",
    "@quasar/extras": "^1.16.4",
    {% elif uiFramework === 'primevue' %}
    "primevue": "^3.46.0",
    "primeicons": "^6.0.1",
    {% endif %}
    "@pinia/nuxt": "^0.5.1",
    "@vueuse/core": "^10.5.0",
    "@vueuse/nuxt": "^10.5.0",
    "pinia": "^2.1.7"
    {% if enablePWA %},
    "@vite-pwa/nuxt": "^0.4.0"
    {% endif %}
    {% if authProvider === 'jwt' %},
    "jsonwebtoken": "^9.0.2",
    "@types/jsonwebtoken": "^9.0.5"
    {% endif %}
    {% if authProvider === 'oauth2' %},
    "@nuxtjs/google-fonts": "^3.0.2"
    {% endif %}
    {% if enableOpenTelemetry %},
    "@nuxt/telemetry": "^2.5.0"
    {% endif %}
    {% if enableRealtime %},
    "ws": "^8.14.2",
    "@types/ws": "^8.5.8"
    {% endif %}
    {% if enableSemanticAnnotations %},
    "n3": "^1.17.2",
    "sparqljs": "^3.7.1"
    {% endif %}
    {% if generateValidation %},
    "joi": "^17.11.0",
    "zod": "^3.22.4"
    {% endif %}
  },
  {% if enablePWA %}
  "pwa": {
    "name": "{{ appName || 'OpenAPI App' }}",
    "short_name": "{{ appName || 'API App' }}",
    "description": "{{ appDescription || 'Generated from OpenAPI specification' }}",
    "theme_color": "#ffffff",
    "background_color": "#ffffff"
  },
  {% endif %}
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "nuxt",
    "openapi",
    "typescript",
    "api-client",
    {% if authProvider %}"{{ authProvider }}",{% endif %}
    {% if uiFramework %}"{{ uiFramework }}",{% endif %}
    "generated"
    {% if enablePWA %},"pwa"{% endif %}
    {% if enableRealtime %},"websocket"{% endif %}
    {% if enableStreaming %},"streaming"{% endif %}
  ],
  "repository": {
    "type": "git",
    "url": "{{ repositoryUrl || '' }}"
  },
  "author": "{{ author || 'Generated by Unjucks' }}",
  "license": "{{ license || 'MIT' }}"
}