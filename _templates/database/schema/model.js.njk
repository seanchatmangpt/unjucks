const { Model } = require('objection');
const Joi = require('joi');

/**
 * {{ modelName }} Model
 * 
 * Represents {{ tableName }} table in the database
 */
class {{ modelName }} extends Model {
  /**
   * Table name in database
   */
  static get tableName() {
    return '{{ tableName }}';
  }

  /**
   * JSON Schema for validation
   */
  static get jsonSchema() {
    return {
      type: 'object',
      required: ['id'],
      properties: {
        id: { type: 'integer' },
        name: { type: 'string' },
        email: { type: 'string', format: 'email' },
        status: { type: 'string', enum: ['active', 'inactive'] },
        
        // Timestamps
        {% if withTimestamps %}
        created_at: { type: 'string', format: 'date-time' },
        updated_at: { type: 'string', format: 'date-time' },
        {% endif %}
        
        // Soft deletes
        {% if withSoftDeletes %}
        deleted_at: { type: ['string', 'null'], format: 'date-time' },
        {% endif %}
      }
    };
  }

  /**
   * Model relationships
   */
  static get relationMappings() {
    return {
      // Define relationships here based on your schema
    };
  }

  /**
   * Before insert hook
   */
  $beforeInsert() {
    {% if withTimestamps %}
    this.created_at = new Date().toISOString();
    this.updated_at = new Date().toISOString();
    {% endif %}
  }

  /**
   * Before update hook
   */
  $beforeUpdate() {
    {% if withTimestamps %}
    this.updated_at = new Date().toISOString();
    {% endif %}
  }

  /**
   * Query modifiers
   */
  static get modifiers() {
    return {
      // Active records only (if soft deletes enabled)
      {% if withSoftDeletes %}
      active(query) {
        query.whereNull('deleted_at');
      },
      {% endif %}

      // Filter by status
      byStatus(query, status) {
        query.where('status', status);
      }
    };
  }

  /**
   * Find active records
   */
  static findActive() {
    return this.query(){% if withSoftDeletes %}.modify('active'){% endif %};
  }

  /**
   * Soft delete (if enabled)
   */
  {% if withSoftDeletes %}
  async softDelete() {
    return await this.$query().patch({
      deleted_at: new Date().toISOString()
    });
  }
  {% endif %}
}

module.exports = {{ modelName }};