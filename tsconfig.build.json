{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/cli/index.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts", 
    "src/**/__tests__/**",
    "src/lib/**/*",
    "src/commands/semantic.ts",
    "src/components/**/*",
    "src/large/**/*",
    "src/mcp/**/*",
    "examples/**/*",
    "tests/**/*",
    "config/**/*",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.cucumber.config.ts",
    "node_modules",
    "dist",
    "**/semantic-validator.ts",
    "**/semantic-*.ts"
  ]
}