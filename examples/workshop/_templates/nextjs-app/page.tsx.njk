---
to: app/{{pageName | kebabCase}}/page.tsx
variables:
  pageName: string
  title: string
  description?: string
  withAuth?: boolean
inject: false
skipIf: "exists"
---
{% if withAuth -%}
import { auth } from '@/lib/auth';
import { redirect } from 'next/navigation';

{% endif -%}
export default async function {{pageName | pascalCase}}Page() {
{% if withAuth %}  const session = await auth();
  
  if (!session?.user) {
    redirect('/login');
  }
{% endif %}
  return (
    <div className="container mx-auto px-4 py-8">
      <div className="max-w-4xl mx-auto">
        <h1 className="text-3xl font-bold text-gray-900 mb-4">
          {{title}}
        </h1>
        
        {% if description -%}
        <p className="text-lg text-gray-600 mb-8">
          {{description}}
        </p>
        {% endif -%}
        
        {/* Generated by KGEN v1 */}
        <div className="bg-blue-50 border border-blue-200 rounded-lg p-6">
          <h2 className="text-xl font-semibold text-blue-900 mb-2">
            Welcome to {{pageName | titleCase}}
          </h2>
          <p className="text-blue-800">
            This page was generated deterministically by KGEN v1.
            Generated at: {new Date().toISOString()}
          </p>
        </div>
        
        {/* Example content section */}
        <div className="mt-8 grid gap-6 md:grid-cols-2">
          <div className="bg-white border border-gray-200 rounded-lg p-6">
            <h3 className="text-lg font-medium text-gray-900 mb-2">
              Features
            </h3>
            <ul className="text-gray-600 space-y-1">
              <li>• Deterministic generation</li>
              <li>• TypeScript support</li>
              <li>• Tailwind CSS styling</li>
              {% if withAuth -%}
              <li>• Authentication ready</li>
              {% endif -%}
            </ul>
          </div>
          
          <div className="bg-white border border-gray-200 rounded-lg p-6">
            <h3 className="text-lg font-medium text-gray-900 mb-2">
              Next Steps
            </h3>
            <ul className="text-gray-600 space-y-1">
              <li>• Customize this template</li>
              <li>• Add your business logic</li>
              <li>• Run drift detection</li>
              <li>• Deploy with confidence</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  );
}